# =============================================================================
# MONITO UNIFIED API CONFIGURATION
# =============================================================================
# Копируйте этот файл в .env и настройте параметры для вашего окружения

# Основные настройки API
MONITO_DEBUG=true
MONITO_API_HOST=0.0.0.0
MONITO_API_PORT=8000
MONITO_LOG_LEVEL=INFO

# База данных unified системы
MONITO_DATABASE_URL=sqlite:///./monito_unified.db

# Аутентификация и безопасность (опционально)
# MONITO_ENABLE_AUTH=false
# MONITO_API_KEY=your-secret-api-key-here

# Rate limiting
MONITO_ENABLE_RATE_LIMITING=true
MONITO_RATE_LIMIT_PER_MINUTE=100

# CORS настройки (для веб интерфейса)
MONITO_CORS_ORIGINS=*

# Документация API
MONITO_ENABLE_DOCS=true

# Логирование
MONITO_LOG_REQUESTS=true

# Кеширование
MONITO_ENABLE_CACHE=true
MONITO_CACHE_TTL_SECONDS=300

# Unified система настройки
MONITO_UNIFIED_BATCH_SIZE=100
MONITO_MATCHING_CONFIDENCE_THRESHOLD=0.8
MONITO_PRICE_COMPARISON_ENABLED=true

# Telegram Bot (для интеграции с существующим ботом)
# MONITO_TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# MONITO_WEBHOOK_URL=https://your-domain.com/webhook

# =============================================================================
# TELEGRAM INTEGRATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/v1/telegram/webhook 